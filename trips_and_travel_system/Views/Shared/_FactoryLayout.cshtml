<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Assets/Agency/styles.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark" style="margin-bottom: 0px;border-radius: 0px;width: 100%;">
        <a class="navbar-brand" href="#" style="width: 170px;">
            Travel<i style="color: darkgrey;font-weight: bolder;font-size: 24px;">&infin;</i>
        </a>
        <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#!"><i class="fa fa-bars"></i></button>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <a class="nav-link" href="@Url.Action("Profile", "Agency")">
                            <div class="sb-nav-link-icon"><i class="fa fa-user"></i></div>
                            Profile
                        </a>
                        <a class="nav-link" href="@Url.Action("CreateNewPost", "Agency")">
                            <div class="sb-nav-link-icon"><i class="fa fa-plus"></i></div>
                            Create New Post
                        </a>
                        <a class="nav-link" href="@Url.Action("MyPosts", "Agency")">
                            <div class="sb-nav-link-icon"><i class="fa fa-sticky-note"></i></div>
                            My Posts
                        </a>
                        <a class="nav-link" href="@Url.Action("ReceivedQuestions", "Agency")">
                            <div class="sb-nav-link-icon"><i class="fa fa-question"></i></div>
                            Received Questions
                        </a>
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content" class="container">
            @RenderBody()
        </div>
    </div>
    <footer class="bg-dark text-center text-white">
        <div class="container p-3">
            <a class="btn btn-floating rounded-circle" style="background-color: #3b5998" href="#!" role="button">
                <i class="fa fa-facebook-f"></i>
            </a>

            <a class="btn btn-floating rounded-circle" style="background-color: #55acee" href="#!" role="button">
                <i class="fa fa-twitter"></i>
            </a>

            <a class="btn btn-floating rounded-circle" style="background-color: #dd4b39" href="#!" role="button">
                <i class="fa fa-google"></i>
            </a>

            <a class="btn btn-floating rounded-circle" style="background-color: #ac2bac" href="#!" role="button">
                <i class="fa fa-instagram"></i>
            </a>

            <a class="btn btn-floating rounded-circle" style="background-color: #0082ca" href="#!" role="button">
                <i class="fa fa-linkedin"></i>
            </a>

            <a class="btn btn-floating rounded-circle" style="background-color: #ffff" href="#!" role="button">
                <i class="fa fa-github"></i>
            </a>
        </div>
        <div class="text-center p-1" style="background-color: rgba(0, 0, 0, 0.2);">
            Copyright © MAS 2021
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/Assets/Agency/scripts.js")
    @Scripts.Render("~/Assets/Agency/EditButton.js")
</body>
</html>
