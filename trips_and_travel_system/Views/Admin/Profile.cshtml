
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<link rel="stylesheet" href="~/Assets/Admin/Profile.css">
<div class="row">
    <div class="offset-lg-4 col-lg-4 offset-sm-4 col-sm-4">
        <div class="card" style="border: none;">
            <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                    <img src="@Url.Content(Model.photo)" alt="Admin" class="rounded-circle" style="width:80%;">
                    <div class="mt-3">
                        <h4>@Model.firstName @Model.lastName</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="offset-lg-2 col-lg-8 col-sm-12">
        <div class="card pb-3" style="border: none;">
            <div class="card-body">
                <div class="row">
                    <div class="col-3">
                        <h6 class="mb-0">Username</h6>
                    </div>
                    <div class="col-9 text-secondary">
                        @Model.username
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-3">
                        <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-9 text-secondary">
                        @Model.email
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-3">
                        <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-9 text-secondary">
                        @Model.phone
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-3">
                        <h6 class="mb-0">User Role</h6>
                    </div>
                    <div class="col-9 text-secondary">
                        Admin
                    </div>
                </div>
                <div class="row mt-4">
                    <button type="button" class="btn btn-dark col-12" data-toggle="modal" data-target="#UpdateProfileModal">
                        Edit Profile
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="UpdateProfileModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title">Change Image</h5>
                <button class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <form method="post" action="@Url.Action("UpdateProfile", "Admin")" enctype="multipart/form-data">
                    <input type="hidden" name="UserId" value="@Model.UserId" />
                    <div class="form-group">
                        <label>Profile Picture:</label>
                        <input type="file" class="form-control" name="Img" style="border: none;">
                    </div><br />
                    <div class="form-group">
                        <label>First Name:</label>
                        <input name="firstName" class="form-control" value="@Model.firstName">
                    </div><br />
                    <div class="form-group">
                        <label>Last Name:</label>
                        <input name="lastName" class="form-control" value="@Model.lastName">
                    </div><br />
                    <div class="form-group">
                        <label>Phone:</label>
                        <input name="phone" class="form-control" value="@Model.phone">
                    </div><br />
                    <div class="form-group">
                        <label>Username:</label>
                        <input name="username" class="form-control" value="@Model.username">
                    </div><br />
                    <div class="form-group">
                        <label>Email:</label>
                        <input name="email" class="form-control" value="@Model.email">
                    </div><br />
                    <div class="form-group">
                        <label>Password:</label>
                        <input name="password" class="form-control" value=""><br />
                        <input class="form-control" value="" placeholder="Confirm Password">
                    </div><br />
                    <div class="form-group">
                        <button type="submit" class="btn btn-dark mt-2" style="width: 100%;height: 10%;">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>